<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:fa5="http://schemas.fontawesome.com/icons/"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:local="clr-namespace:Noob_Coder.Views" x:Class="Noob_Coder.Views.GameSceneView"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280"
             Height="720" Width="1280">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.25*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Background="#000000">
            <TextBlock Margin="7,7,7,0" TextWrapping="Wrap" Text="UserName" FontSize="16" Foreground="White" FontWeight="Bold" DockPanel.Dock="Top" Height="21" VerticalAlignment="Top" />
            <Grid Margin="7, 28, 7, 0" Height="21" VerticalAlignment="top">
                <TextBlock  TextWrapping="Wrap" Text="Статус: " FontSize="14" Foreground="#FF7F7F7F"  DockPanel.Dock="Top" Height="21" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                <TextBlock  TextWrapping="Wrap" Text="Лошара " FontSize="14" Foreground="#FF7F7F7F"  DockPanel.Dock="Top" Height="21" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="47,0,0,0"/>
            </Grid>
            <Rectangle Margin="0, 52, 0, 0" Stroke="#FF7F7F7F" Width="auto" Fill="#FF7F7F7F" VerticalAlignment="top" Height="1"/>
            <Grid Margin="12,62,7,480">
                <Button  VerticalAlignment="Top" Margin="0,12,0,0">
                    <StackPanel  Orientation="Horizontal" Width="200">
                        <fa5:ImageAwesome Icon="Solid_GripHorizontal" Height="16" Foreground="White"  />
                        <TextBlock Text="  Главная" />
                    </StackPanel>
                </Button>
                <Button VerticalAlignment="Top" Margin="0,54,0,0" Background="Black" BorderBrush="Black">
                    <StackPanel  Orientation="Horizontal" Width="200">
                        <fa5:ImageAwesome Icon="Solid_MoneyBillWave" Height="16" Foreground="#FF7F7F7F"  />
                        <TextBlock Text="  Финансы" Foreground="#FF7F7F7F"/>
                    </StackPanel>
                </Button>
                <Button VerticalAlignment="Top" Margin="0,96,0,0" Background="Black" BorderBrush="Black">
                    <StackPanel  Orientation="Horizontal" Width="200">
                        <fa5:ImageAwesome Icon="Solid_LaptopHouse" Height="16" Foreground="#FF7F7F7F"  />
                        <TextBlock Text="  Имущество" Foreground="#FF7F7F7F"/>
                    </StackPanel>
                </Button>
                <Button  VerticalAlignment="Top" Margin="0,138,0,0" Background="Black" BorderBrush="Black">
                    <StackPanel  Orientation="Horizontal" Width="200">
                        <fa5:ImageAwesome Icon="Solid_GraduationCap" Height="16" Foreground="#FF7F7F7F"  />
                        <TextBlock Text="  Обучение" Foreground="#FF7F7F7F"/>
                    </StackPanel>
                </Button>
            </Grid>
            <Rectangle Margin="0, 612, 0, 0" Stroke="#FF7F7F7F" Width="auto" Fill="#FF7F7F7F" VerticalAlignment="top" Height="1"/>
            <StackPanel  Orientation="Horizontal" Margin="12,0,7,0" HorizontalAlignment="center">
                <Button  VerticalAlignment="Top" Margin="0,628,0,0">
                    <StackPanel  Orientation="Horizontal">
                        <fa5:ImageAwesome Icon="Solid_Save" Height="16" Foreground="White"  />

                    </StackPanel>
                </Button>
                <Button  VerticalAlignment="Top" Margin="28,628,0,0">
                    <StackPanel  Orientation="Horizontal">
                        <fa5:ImageAwesome Icon="Solid_Upload" Height="16" Foreground="White"  />

                    </StackPanel>
                </Button>
                <Button  VerticalAlignment="Top" Margin="28,628,0,0" Command="{Binding NavigateMenuCommand}" Cursor="Hand">
                    <StackPanel  Orientation="Horizontal">
                        <fa5:ImageAwesome Icon="Solid_WindowClose" Height="16" Foreground="White"  />

                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <Grid Grid.Column="1">
            <materialDesign:Card HorizontalAlignment="Left" Margin="15,10,0,0" VerticalAlignment="Top" Height="70" Width="640">
                <Grid Margin="5,5,5,5" >

                    <Grid  HorizontalAlignment="left" Width="150">
                        <ProgressBar HorizontalAlignment="Left" Height="30" Margin="5,5,5,5" VerticalAlignment="Top" Width="150" Value="43" Foreground="#FF9A67EA" Background="#549A67EA" BorderBrush="#549A67EA"/>
                        <StackPanel  Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                            <fa5:ImageAwesome Icon="Solid_Heart" Height="16" Foreground="#FF9967EA"/>
                            <TextBlock  TextWrapping="Wrap" Text="  Здоровье" FontSize="14"   Height="21"/>
                        </StackPanel>
                    </Grid>

                </materialDesign:Chip>

                <materialDesign:Chip HorizontalAlignment="Center" Margin="0,170,0,0" VerticalAlignment="Top" Width="406">
                    <Grid>
                        <ProgressBar  HorizontalAlignment="Left" Height="22" Width="275"   Margin="107,2,0,1" Background="#FF00BCDA" BorderBrush="#FF00BCDA" Cursor="Hand"/>


                        <Label Content="Полосатость" HorizontalAlignment="Left" VerticalAlignment="Center" Width="102"/>
                    </Grid>

                </materialDesign:Chip>
                <Label Content="Статус: Лошара" HorizontalAlignment="Left" Margin="104,70,0,0" VerticalAlignment="Top" Height="25"/>
                <Label Content="Карма: 0" HorizontalAlignment="Left" Margin="105,41,0,0" VerticalAlignment="Top"/>
                <TextBlock Text="{Binding GameDate, StringFormat={}{0:d}, ConverterCulture=ru-RU}" HorizontalAlignment="Left" Margin="332,12,0,0" VerticalAlignment="Top" Width="130"/>
                <Label Content="$ 10 000" HorizontalAlignment="Left" Margin="264,41,0,0" VerticalAlignment="Top" Height="49" Width="152" FontSize="36" FontWeight="Bold"/>


            </Grid>
        </materialDesign:Card>
        <materialDesign:Card HorizontalAlignment="Left" Margin="456,10,0,0" VerticalAlignment="Top" Height="210
                             " Width="426">
            <Grid>
                <Label Content="Теукщая работа" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top"/>
                <materialDesign:Chip VerticalAlignment="Top" Height="42" Width="406" Margin="0,29,0,0" HorizontalAlignment="Center"  Cursor="Hand">
                    <Grid>
                        <Button Content="Уволиться" Width="103" HorizontalAlignment="right"/>
                        <Label Content="Самый главный кассир в 'Шестерочке'" HorizontalAlignment="Left" VerticalAlignment="Center"/>

                    </Grid>

                </Grid>

            </Grid>
        </materialDesign:Card>
        <materialDesign:Card HorizontalAlignment="Left" Height="579" Margin="900,10,0,0" VerticalAlignment="Top" Width="352">
            <Grid>
                <Label Content="Недвижимость" HorizontalAlignment="Left" Margin="6,4,0,0" VerticalAlignment="Top"/>
                <materialDesign:Chip  Margin="6,33,0,0" VerticalAlignment="Top" Width="332" Height="100">
                    <Grid Height="81">
                        <Label Content="Описание"/>
                        <Button Content="Поменять" Width="103" HorizontalAlignment="right" VerticalAlignment="Bottom"></Button>
                    </Grid>
                </materialDesign:Chip>
                <Label Content="Автомобиль" HorizontalAlignment="Left" Margin="10,138,0,0" VerticalAlignment="Top"/>
                <materialDesign:Chip  Margin="0,167,0,0" VerticalAlignment="Top" Width="332" Height="100" HorizontalAlignment="Center">
                    <Grid Height="81">
                        <Label Content="Описание"/>
                        <Button Content="Поменять" Width="103" HorizontalAlignment="right" VerticalAlignment="Bottom"></Button>
                    </Grid>
                </materialDesign:Chip>
                <Label Content="Компьютер" HorizontalAlignment="Left" Margin="12,0,0,0" VerticalAlignment="Center"/>
                <materialDesign:Chip  Margin="12,306,0,0" VerticalAlignment="Top" Width="332" Height="242">
                    <Grid Height="218">
                        <Label Content="Описание"/>
                        <Button Content="Поменять" Width="103" HorizontalAlignment="right" VerticalAlignment="Bottom"></Button>
                    </Grid>
                </materialDesign:Chip>
            </Grid>

        </materialDesign:Card>
        <materialDesign:Card HorizontalAlignment="Left" Height="56" Margin="900,607,0,0" VerticalAlignment="Top" Width="352">
            <Button Content="Завершить игру" HorizontalAlignment="Center" VerticalAlignment="Center" Height="36" Width="332" Command="{Binding NavigateMenuCommand}" Cursor="Hand"/>
        </materialDesign:Card>
        <materialDesign:Card Content="Блок обучения" HorizontalAlignment="Left" Margin="10,447,0,0" VerticalAlignment="Top" Height="216" Width="426"/>
        <materialDesign:Card Content="Блок Банковских операций" HorizontalAlignment="Left" Margin="10,240,0,0" VerticalAlignment="Top" Height="188" Width="426"/>
        <materialDesign:Card Content="А В ЭТОМ ЗАМЕЧАТЕЛЬНОМ БЛОКЕ МЫ БУДЕМ УЧИТЬСЯ ГОТОВИТЬ БОРЩ!" HorizontalAlignment="Left" Margin="456,240,0,0" VerticalAlignment="Top" Height="423" Width="426"/>


        </Grid>

    </Grid>



</UserControl>