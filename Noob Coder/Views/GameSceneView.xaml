<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:fa5="http://schemas.fontawesome.com/icons/"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             xmlns:local="clr-namespace:Noob_Coder.Views" x:Class="Noob_Coder.Views.GameSceneView"
             xmlns:uc="clr-namespace:Noob_Coder.Views.User_Controls"         
             mc:Ignorable="d"
             d:DesignHeight="720" 
             d:DesignWidth="1280">


    <Grid Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Name="TopGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" Name="UserInfoGrid" Background="#ff000000">
                <!--Имя пользователя и статус-->
                <StackPanel  Orientation="Horizontal" Margin="10" VerticalAlignment="Top" HorizontalAlignment="Left">
                    <fa5:FontAwesome Icon="Solid_User"  FontSize="24" Foreground="White" Name="UserIcon"/>
                    <TextBlock Margin="12,-4,0,0" Text="NooB Coder" FontSize="24" Foreground="White" FontWeight="Bold"/>
                </StackPanel>
                <StackPanel Margin="10, 48, 0, 0" Height="21" VerticalAlignment="top" HorizontalAlignment="Left">
                    <TextBlock  TextWrapping="Wrap" Text="Статус: " FontSize="14" Foreground="white"  />
                    <TextBlock Margin="52, -19, 0, 0"  TextWrapping="Wrap" Text="Лошара " FontSize="14" Foreground="#FF7F7F7F"  />
                </StackPanel>
                <Rectangle Height="1" Stroke="#FF7F7F7F" VerticalAlignment="Bottom"/>
                <!--//Имя пользователя и статус-->
            </Grid>
            <Grid Grid.Column="1" Name="UserIndicatorsGrid">

                <uc:UserIndicatorsTab />
                <!---//Постоянные показатели игрового персонажа//-->
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Name="ContentGrid" Background="black" Grid.RowSpan="2">
                <!---Основной контент стратицы с переключателем вкладок-->
                <TabControl Grid.Row="0" TabStripPlacement="Left" Height="720">
                    <TabControl.Resources>
                        <Style TargetType="{x:Type TabItem}">



                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type TabItem}">
                                        <Grid  Background="black" Height="72">
                                            <Border Name="Button" VerticalAlignment="Top" Margin="15,12,15,0" Height="48" CornerRadius="4" >
                                                <ContentPresenter ContentSource="Header" x:Name="ContentSite"  VerticalAlignment="Center" HorizontalAlignment="left" Margin="25,0, 0,0" >

                                                </ContentPresenter>
                                            </Border>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="FontWeight" Value="Bold" />
                                                <Setter TargetName="Button" Property="Background" Value="#FF673AB7" />
                                                <Setter Property="Foreground" Value="white" />

                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="true">
                                                <Setter Property="FontWeight" Value="Bold" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>

                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Width" Value="200" />
                            <Setter Property="Background" Value="#FF000000" />
                            <Setter Property="Margin" Value="0" />
                            <Setter Property="Padding" Value="0" />
                            <Setter Property="FontSize" Value="16" />
                            <Setter Property="VerticalAlignment" Value="center" />
                            <Setter Property="HorizontalAlignment" Value="left" />
                            <Setter Property="Foreground" Value="#FF7F7F7F" />

                        </Style>



                    </TabControl.Resources>


                    <TabItem>
                        <TabItem.Header>
                            <Grid>
                                <StackPanel  Orientation="Horizontal" >
                                    <fa5:FontAwesome Icon="Solid_GripHorizontal"  />
                                    <TextBlock Text="Главная" Margin="10,-4,0,0" />
                                </StackPanel>
                            </Grid>

                        </TabItem.Header>
                        <!--Вкладка "Главная" -> GameSceneTabs/MainTab.xaml -->
                        <uc:MainTab />
                        </TabItem>



                    <TabItem>
                        <TabItem.Header>
                            <Grid>
                                <StackPanel  Orientation="Horizontal">
                                    <fa5:FontAwesome Icon="Solid_LaptopHouse" Height="16" />
                                    <TextBlock Text="Имущество" Margin="10,0,0,0" />
                                </StackPanel>
                            </Grid>

                        </TabItem.Header>
                        <!--Вкладка "Имущество" -> GameSceneTabs/PropertyTab.xaml -->
                        <uc:PropertyTab />
                        
                    </TabItem>

                    <TabItem>
                        <TabItem.Header>
                            <Grid>
                                <StackPanel  Orientation="Horizontal">
                                    <fa5:FontAwesome Icon="Solid_GraduationCap" Height="16" />
                                    <TextBlock Text="Обучение" Margin="10,0,0,0" />
                                </StackPanel>
                            </Grid>

                        </TabItem.Header>
                        <!--Вкладка "Обучение" -> GameSceneTabs/EducationTab.xaml -->
                        <uc:PropertyTab />

                    </TabItem>

                    <TabItem>
                        <TabItem.Header>
                            <Grid>
                                <StackPanel  Orientation="Horizontal">
                                    <fa5:FontAwesome Icon="Solid_MoneyBillWave" Height="16" />
                                    <TextBlock Text="Финансы" Margin="10,0,0,0" />
                                </StackPanel>
                            </Grid>

                        </TabItem.Header>
                        <!--Вкладка "Финансы" -> GameSceneTabs/FinanceTab.xaml -->
                        <uc:FinanceTab />
                        
                    </TabItem>

                </TabControl>
                <!---//Основной контент стратицы с 4переключателем вкладок//-->
            </Grid>
            <Grid Grid.Row="1" Name="BottomButtonsGrid" Background="black" Margin="0,0,1065,0" HorizontalAlignment="Center" VerticalAlignment="Center">
                <!--Нижние кнопки сохранения, загрузки и выхода в главное меню-->
                <Rectangle Height="1" Stroke="#FF7F7F7F" VerticalAlignment="top" Width="200" />
                <StackPanel  Orientation="Horizontal" Margin="0,15,0,0" HorizontalAlignment="center" VerticalAlignment="Center">
                    <Button  VerticalAlignment="Top" >
                        <StackPanel  Orientation="Horizontal">
                            <fa5:FontAwesome Icon="Solid_Save"  Foreground="White"  />
                        </StackPanel>
                    </Button>
                    <Button  VerticalAlignment="Top" Margin="20, 0, 20 ,0" Cursor="Hand">
                        <StackPanel  Orientation="Horizontal"  HorizontalAlignment="Center" VerticalAlignment="Center">
                            <fa5:FontAwesome Icon="Solid_Upload"  Foreground="White"  />

                        </StackPanel>
                    </Button>
                    <Button  VerticalAlignment="Top" Command="{Binding NavigateMenuCommand}" Cursor="Hand">
                        <StackPanel  Orientation="Horizontal">
                            <fa5:FontAwesome Icon="Solid_WindowClose"  Foreground="White"  />

                        </StackPanel>
                    </Button>
                </StackPanel>
                <!--//Нижние кнопки сохранения, загрузки и выхода в главное меню//-->
            </Grid>
        </Grid>
    </Grid>
</UserControl>