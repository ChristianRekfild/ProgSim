<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:fa5="http://schemas.fontawesome.com/icons/"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:local="clr-namespace:Noob_Coder.Views" x:Class="Noob_Coder.Views.GameSceneView"
             mc:Ignorable="d"
             d:DesignHeight="720" 
             d:DesignWidth="1280">


    <Grid Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Name="TopGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" Name="UserInfoGrid" Background="#ff000000">
                <!--Имя пользователя и статус-->
                <StackPanel  Orientation="Horizontal" Margin="10" VerticalAlignment="Top" HorizontalAlignment="Left">
                    <fa5:FontAwesome Icon="Solid_User"  FontSize="24" Foreground="White" Name="UserIcon"/>
                    <TextBlock Margin="12,-4,0,0" Text="UserName" FontSize="24" Foreground="White" FontWeight="Bold"/>
                </StackPanel>
                <StackPanel Margin="10, 48, 0, 0" Height="21" VerticalAlignment="top" HorizontalAlignment="Left">
                    <TextBlock  TextWrapping="Wrap" Text="Статус: " FontSize="14" Foreground="white"  />
                    <TextBlock Margin="52, -19, 0, 0"  TextWrapping="Wrap" Text="Лошара " FontSize="14" Foreground="#FF7F7F7F"  />
                </StackPanel>
                <Rectangle Height="1" Stroke="#FF7F7F7F" VerticalAlignment="Bottom"/>
                <!--//Имя пользователя и статус-->
            </Grid>
            <Grid Grid.Column="1" Name="UserIndicatorsGrid">
                <!---Постоянные показатели игрового персонажа-->
                <materialDesign:Card Margin="15,10,0,0" HorizontalAlignment="Left" Height="70" Width="640">
                    <!--Прогрессбары с основными характеристиками игрового персонажа-->
                    <Grid Margin="5,5,5,5" >

                        <Grid  HorizontalAlignment="left" Width="150">
                            <ProgressBar HorizontalAlignment="Left" Height="30" Margin="5,5,0,0" VerticalAlignment="Top" Width="135" Value="{Binding Health}" Foreground="#FF9A67EA" Background="#549A67EA" BorderBrush="#549A67EA"/>
                            <StackPanel  Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                                <fa5:FontAwesome Icon="Solid_Heart" Height="16" Foreground="#FF9967EA"/>
                                <TextBlock  TextWrapping="Wrap" Text="  Здоровье" FontSize="14"   Height="21"/>
                            </StackPanel>
                        </Grid>

                        <Grid  HorizontalAlignment="Left" Width="150" Margin="160,0,0,0">
                            <ProgressBar HorizontalAlignment="Left" Height="30" Margin="5,5,0,0" VerticalAlignment="Top" Width="135" Value="77" Foreground="#FFB00020" Background="#54B00020" BorderBrush="#54B00017"/>
                            <StackPanel  Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                                <fa5:FontAwesome Icon="Solid_Cat" Height="16" Foreground="#FFB00020"/>
                                <TextBlock  TextWrapping="Wrap" Text="  Усатость" FontSize="14"   Height="21"/>
                            </StackPanel>
                        </Grid>

                        <Grid  HorizontalAlignment="Left" Width="150" Margin="320,0,0,0">
                            <ProgressBar HorizontalAlignment="Left" Height="30" Margin="5,5,0,0" VerticalAlignment="Top" Width="135" Value="25" Foreground="#FFFFEB3A" Background="#54FFEB3A" BorderBrush="#54FFEB3A"/>
                            <StackPanel  Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                                <fa5:FontAwesome Icon="Solid_ChartLine" Height="16" Foreground="#FFFFEB3A"/>
                                <TextBlock  TextWrapping="Wrap" Text="  Полосатость" FontSize="14"   Height="21"/>
                            </StackPanel>
                        </Grid>

                        <Grid  HorizontalAlignment="Left" Width="150" Margin="480,0,0,0">
                            <ProgressBar HorizontalAlignment="Left" Height="30" Margin="5,5,0,0" VerticalAlignment="Top" Width="135" Value="63" Foreground="#FFFF3D00" Background="#54FF3D00" BorderBrush="#54FF3D00"/>
                            <StackPanel  Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                                <fa5:FontAwesome Icon="Solid_BirthdayCake" Height="16" Foreground="#FFFF3D00"/>
                                <TextBlock  TextWrapping="Wrap" Text="  Настроение" FontSize="14"   Height="21"/>
                            </StackPanel>
                        </Grid>

                    </Grid>
                    <!--//Прогрессбары с основными характеристиками игрового персонажа//-->
                </materialDesign:Card>

                <materialDesign:Card  Margin="670,10,0,0" HorizontalAlignment="Left" Height="70" Width="260">
                    <!--Деньги и дата-->
                    <Grid>
                        <materialDesign:Chip  Margin="10,0,0,0" VerticalAlignment="Center" Height="50" Width="150" Cursor="Hand">
                            <StackPanel  Orientation="Horizontal" HorizontalAlignment="left" VerticalAlignment="Bottom">
                                <fa5:FontAwesome Icon="Solid_DollarSign" Margin="0,5,0,0"  Foreground="Black" FontSize="26"/>
                                <TextBlock  TextWrapping="Wrap" Text=" 10 000" FontSize="26"  FontWeight="Bold"/>
                            </StackPanel>
                        </materialDesign:Chip>
                        <StackPanel  Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="160,0,0,0" Height="50" Width="90">
                            <fa5:FontAwesome Icon="Solid_Calendar" FontSize="14" Foreground="Black" HorizontalAlignment="Center"/>
                            <TextBlock  TextWrapping="Wrap" Text="{Binding GameDate, StringFormat={}{0:M}, ConverterCulture=ru-RU}" FontSize="14" HorizontalAlignment="Center" />
                            <TextBlock  TextWrapping="Wrap" Text="{Binding GameDate, StringFormat={}{0:yyyy}, ConverterCulture=ru-RU}" FontSize="14" HorizontalAlignment="Center" />
                        </StackPanel>

                    </Grid>
                    <!--//Деньги и дата//-->
                </materialDesign:Card>
                <!---//Постоянные показатели игрового персонажа//-->
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Name="ContentGrid" Background="black" Grid.RowSpan="2">
                <!---Основной контент стратицы с переключателем вкладок-->
                <TabControl Grid.Row="0" TabStripPlacement="Left" Height="720">
                    <TabControl.Resources>
                        <Style TargetType="{x:Type TabItem}">



                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type TabItem}">
                                        <Grid  Background="black" Height="72">
                                            <Border Name="Button" VerticalAlignment="Top" Margin="15,12,15,0" Height="48" CornerRadius="4" >
                                                <ContentPresenter ContentSource="Header" x:Name="ContentSite"  VerticalAlignment="Center" HorizontalAlignment="left" Margin="25,0, 0,0" >

                                                </ContentPresenter>
                                            </Border>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="FontWeight" Value="Bold" />
                                                <Setter TargetName="Button" Property="Background" Value="#FF673AB7" />
                                                <Setter Property="Foreground" Value="white" />

                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="true">
                                                <Setter Property="FontWeight" Value="Bold" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>

                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Width" Value="320" />
                            <Setter Property="Background" Value="#FF000000" />
                            <Setter Property="Margin" Value="0" />
                            <Setter Property="Padding" Value="0" />
                            <Setter Property="FontSize" Value="16" />
                            <Setter Property="VerticalAlignment" Value="center" />
                            <Setter Property="HorizontalAlignment" Value="left" />
                            <Setter Property="Foreground" Value="#FF7F7F7F" />

                        </Style>



                    </TabControl.Resources>


                    <TabItem>
                        <TabItem.Header>
                            <Grid>
                                <StackPanel  Orientation="Horizontal" >
                                    <fa5:FontAwesome Icon="Solid_GripHorizontal"  />
                                    <TextBlock Text="Главная" Margin="10,-4,0,0" />
                                </StackPanel>
                            </Grid>

                        </TabItem.Header>
                        <Grid Background="#FFD8D8D8">
                            <materialDesign:Card Content="Card" HorizontalAlignment="Left" Margin="15,10,0,0" VerticalAlignment="Top" Height="565" Width="295"/>
                            <materialDesign:Card Content="Card" HorizontalAlignment="Left" Margin="325,10,0,0" VerticalAlignment="Top" Height="565" Width="295"/>
                            <materialDesign:Card Content="Card" HorizontalAlignment="Left" Margin="635,10,0,0" VerticalAlignment="Top" Height="270" Width="295"/>
                            <materialDesign:Card Content="Card" HorizontalAlignment="Left" Margin="635,295,0,0" VerticalAlignment="Top" Height="280" Width="295"/>
                        </Grid>

                    </TabItem>



                    <TabItem>
                        <TabItem.Header>
                            <Grid>
                                <StackPanel  Orientation="Horizontal">
                                    <fa5:FontAwesome Icon="Solid_LaptopHouse" Height="16" />
                                    <TextBlock Text="Имущество" Margin="10,0,0,0" />
                                </StackPanel>
                            </Grid>

                        </TabItem.Header>
                        <Grid Background="#FFD8D8D8">
                            <materialDesign:Card Content="Card" HorizontalAlignment="Left" Margin="15,10,0,0" VerticalAlignment="Top" Height="270" Width="295"/>
                            <materialDesign:Card Content="Card" HorizontalAlignment="Left" Margin="15,295,0,0" VerticalAlignment="Top" Height="280" Width="295"/>
                            <materialDesign:Card Content="Card" HorizontalAlignment="Left" Margin="325,10,0,0" VerticalAlignment="Top" Height="565" Width="295"/>
                            <materialDesign:Card Content="Card" HorizontalAlignment="Left" Margin="635,10,0,0" VerticalAlignment="Top" Height="270" Width="295"/>
                            <materialDesign:Card Content="Card" HorizontalAlignment="Left" Margin="635,295,0,0" VerticalAlignment="Top" Height="280" Width="295"/>

                        </Grid>

                    </TabItem>

                    <TabItem>
                        <TabItem.Header>
                            <Grid>
                                <StackPanel  Orientation="Horizontal">
                                    <fa5:FontAwesome Icon="Solid_GraduationCap" Height="16" />
                                    <TextBlock Text="Обучение" Margin="10,0,0,0" />
                                </StackPanel>
                            </Grid>

                        </TabItem.Header>
                        <Grid Background="#FFD8D8D8">
                            <materialDesign:Card Content="Card" HorizontalAlignment="Left" Margin="15,10,0,0" VerticalAlignment="Top" Height="270" Width="295"/>
                            <materialDesign:Card Content="Card" HorizontalAlignment="Left" Margin="15,295,0,0" VerticalAlignment="Top" Height="280" Width="295"/>
                            <materialDesign:Card Content="Card" HorizontalAlignment="Left" Margin="325,10,0,0" VerticalAlignment="Top" Height="270" Width="295"/>
                            <materialDesign:Card Content="Card" HorizontalAlignment="Left" Margin="325,295,0,0" VerticalAlignment="Top" Height="280" Width="295"/>
                            <materialDesign:Card Content="Card" HorizontalAlignment="Left" Margin="635,10,0,0" VerticalAlignment="Top" Height="270" Width="295"/>
                            <materialDesign:Card Content="Card" HorizontalAlignment="Left" Margin="635,295,0,0" VerticalAlignment="Top" Height="280" Width="295"/>
                        </Grid>

                    </TabItem>

                    <TabItem>
                        <TabItem.Header>
                            <Grid>
                                <StackPanel  Orientation="Horizontal">
                                    <fa5:FontAwesome Icon="Solid_MoneyBillWave" Height="16" />
                                    <TextBlock Text="Финансы" Margin="10,0,0,0" />
                                </StackPanel>
                            </Grid>

                        </TabItem.Header>
                        <Grid Background="#FFD8D8D8">
                            <materialDesign:Card Content="Card" HorizontalAlignment="Left" Margin="15,10,0,0" VerticalAlignment="Top" Height="565" Width="295"/>
                            <materialDesign:Card Content="Card" HorizontalAlignment="Left" Margin="325,10,0,0" VerticalAlignment="Top" Height="565" Width="295"/>
                            <materialDesign:Card Content="Card" HorizontalAlignment="Left" Margin="635,10,0,0" VerticalAlignment="Top" Height="565" Width="295"/>

                        </Grid>

                    </TabItem>

                </TabControl>
                <!---//Основной контент стратицы с 4переключателем вкладок//-->
            </Grid>
            <Grid Grid.Row="1" Name="BottomButtonsGrid" Background="black" Margin="0,0,960,0" HorizontalAlignment="Center" VerticalAlignment="Center">
                <!--Нижние кнопки сохранения, загрузки и выхода в главное меню-->
                <Rectangle Height="1" Stroke="#FF7F7F7F" VerticalAlignment="top" Width="370" />
                <StackPanel  Orientation="Horizontal" Margin="0,15,0,0" HorizontalAlignment="center" VerticalAlignment="Center">
                    <Button  VerticalAlignment="Top" >
                        <StackPanel  Orientation="Horizontal">
                            <fa5:FontAwesome Icon="Solid_Save"  Foreground="White"  />
                        </StackPanel>
                    </Button>
                    <Button  VerticalAlignment="Top" Margin="50, 0, 50 ,0">
                        <StackPanel  Orientation="Horizontal"  HorizontalAlignment="Center" VerticalAlignment="Center">
                            <fa5:FontAwesome Icon="Solid_Upload"  Foreground="White"  />

                        </StackPanel>
                    </Button>
                    <Button  VerticalAlignment="Top" Command="{Binding NavigateMenuCommand}" Cursor="Hand">
                        <StackPanel  Orientation="Horizontal">
                            <fa5:FontAwesome Icon="Solid_WindowClose"  Foreground="White"  />

                        </StackPanel>
                    </Button>
                </StackPanel>
                <!--//Нижние кнопки сохранения, загрузки и выхода в главное меню//-->
            </Grid>
        </Grid>
    </Grid>
</UserControl>