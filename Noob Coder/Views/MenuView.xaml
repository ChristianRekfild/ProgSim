<UserControl x:Class="Noob_Coder.Views.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid x:Name="MainMenu" ShowGridLines="False">

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <Image x:Name="Logo" Grid.Column="1" Height="400" Width="400" Source="{Binding LogoImagePath}"/>
        <Button x:Name="ResumeGameMenuButton" 
                Grid.Row="1" Grid.Column="1" 
                Margin="0,20,0,0" 
                VerticalAlignment="Top"
                Content="{Binding ResumeGameButtonName}"
                Command="{Binding NavigateResumeGameCommand}" Cursor=""/>
        <Button x:Name="NewGameMenuButton" 
                Grid.Column="1" Grid.Row="1"  
                Margin="0,85,0,0" 
                VerticalAlignment="Top" 
                Content="{Binding NewGameButtonName}"
                Command="{Binding NavigateNewGameCommand}" Cursor=""/>
        <Button x:Name="LoadGameMenuButton" 
                Grid.Column="1" Grid.Row="1" 
                Margin="0,150,0,0" 
                VerticalAlignment="Top" 
                Content="{Binding LoadGameButtonName}" />
        <Button x:Name="NavigateSettingMenuButton" 
                Grid.Column="1" Grid.Row="1" 
                Margin="0,215,0,0" 
                VerticalAlignment="Top" 
                Content="{Binding SettingsButtonName}" />
        <Button x:Name="NavigateFeedBackFormMenuButton" 
                Grid.Column="1" Grid.Row="1"
                Margin="0,280,0,0" 
                VerticalAlignment="Top" 
                Content="{Binding FeedbackButtonName}" 
                Command="{Binding NavigateFeedBackFormCommand}" />
        <Button x:Name="ExitMenuButton" 
                Grid.Column="1" Grid.Row="1"
                Margin="0,345,0,0"   
                VerticalAlignment="Top" 
                Content="{Binding ExitButtonName}" 
                Command="{Binding CloseApplicationCommand}" />
          </Grid>
</UserControl>
